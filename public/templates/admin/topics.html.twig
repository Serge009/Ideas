{% extends "admin.html.twig" %}
{% block content %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Creator</th>
            <th>Date</th>
            <th>Title</th>
            <th>Message</th>
            <th>Picture</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.creator.name ~ ' ' ~ topic.creator.surname }}</td>
                <td>{{ topic.dateCreated | date('Y-m-d H:i:s') }}</td>
                <td>{{ topic.title }}</td>
                <td>{{ topic.message }}</td>
                <td>{{ topic.picture }}</td>
                <td>
                    {% if topic.deleted %}
                        <a href="{{ url }}topics/activate/{{ topic.id }}">
                            <i class="glyphicon glyphicon-ok"></i>
                        </a>
                    {% else %}
                        <a href="{{ url }}topics/delete/{{ topic.id }}">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}