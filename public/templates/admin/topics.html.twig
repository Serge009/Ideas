    <div class="panel-group" id="topics-accordion">
    {% for topic in topics %}
        <div class="panel panel-default">

            <a data-toggle="collapse" data-parent="#topics-accordion" href="#collapseOne">
                <div class="panel-heading">
                    <div class="topic-title">{{ topic.title }}</div>
                    <div class="topic-author"></div>
                    <div class="topic-time">{{ topic.dateCreated | date('Y-m-d H:i:s') }}</div>
                    <div class="topic-comments">
                        !<i class="fa fa-comment"></i> 20!
                    </div>
                    <div class="topic-rate">
                        {% for i in range(1, topic.mark) %}
                            {% if i is even and i > 0 %}
                                <i class="fa fa-star"></i>
                            {% elseif i == topic.mark and i > 0 %}
                                <i class="fa fa-star-half"></i>
                            {% endif %}
                        {% endfor %}
                    </div>

                </div>
            </a>

            <div id="collapseOne" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="topics-header">
                        <p>{{ topic.message }}</p>
                    </div>
                    <div class="topics-embed embed-responsive embed-responsive-16by9"
                         style="{%  if topic.picture is empty %}display: none;{% endif %}">
                        <iframe class="embed-responsive-item"
                                src="{{ topic.picture }}" ></iframe>
                    </div>
                    <br />
                    <div class="topics-comments">
                        <table class="table table-striped table-hover">

                            <tbody>
                            {% for comment in topic.comments %}
                                <tr>
                                    <td>{{ comment.creator.name }}</td>
                                    <td>{{ comment.comment }}</td>
                                    <td>{{ comment.dateCreated|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    {% endfor %}

    </div>

{% endblock %}